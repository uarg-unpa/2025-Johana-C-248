public class Pila {
  private char[] elementos;
  private char cima;
  private final char MAX = 10;   

  public Pila() {
    elementos = new char[MAX];
      cima = -1;
  }

  public boolean estaVacia() {
      return cima == -1;
  } else{
      estaLlena() {
        return cima == MAX - 1;
      }
  }

  public void meter(char x) {
      if (estaLlena()) {
        System.out.println("pila esta llena");
    } else {
        elementos[++cima] = x;
        System.out.println("se agrego el elemento" + x);
        System.out.println("la cima es" + cima);
    }
}

  public char sacar() {
    if (estaVacia()) {
      System.out.println("pila esta vacia");
      return 0;
    } else {
      return elementos[cima--];
    }
  }

  public Pila() {
    Pila pila = new Pila();
    Pila aux = new Pila();
      int x;
      while (pila.estaVacia() == false) {
          x = pila.sacar();
        if (x % 2 == 0) {
            aux.meter(x);
        } else {
            pila.meter(x);
        }
      }
    }

  public char cimaPila() {
    char aux;
    aux=sacar();
    meter(aux);
    return aux;
  }
}