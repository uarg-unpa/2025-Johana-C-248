public class MiListadeReproduccion {
    private Cancion[] elementos;
    private final int MAX = 100;
    private int frente;
    private int final;

    public MiListadeReproduccion() {
        elementos = new Cancion[MAX];
        frente = 0;
        final = 0;
    }

    publlic boolean estaVacia() {
        return frente == final;
    }

    public Cancion obtenerCancion(int indice) {
        if (indice >= 0 && indice < final) {
            return elementos[indice];
        } else {
            return null;
        }
    }

    public void agregarCancion(String nombre, String genero, String interprete, int duracion) {
        while (final < MAX) {
            elementos[final] = new Cancion(nombre, genero, interprete, duracion);
            final++;
        }
    }

    public int guardarCambios() {
        final = 0;
        return final;
    }

    public boolean estaLlena() {
        return final == MAX;
    }

    public void mostrarLista() {
        

}