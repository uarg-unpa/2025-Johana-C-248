public class coladeEntero {
    private int[] elementos;
    private int frente;
    private int fin;
    private final int MAX = 100;

    public int siguiente() {
        return (frente + 1) % MAX;
    }

    public coladeEntero() {
        elementos = new int[MAX];
        frente = 0;
        fin = 0;
    }

    public Boolean estaVacia() {
        return frente == fin;
    }

    public Boolean estaLlena() {
        return fin == MAX;
    }

    public void insertar(int numero) {
        elementos[fin] = numero;
        fin = siguiente(fin);
    }

    public int eliminar() {
        int aux = elementos[frente];
        frente = siguiente(frente);
        return aux;
    }

    public int tamano() {
        return (fin - frente + MAX) % MAX;
    }

    public boolean masElementos(ColaInt q2) {
        if (q2.tamano() > this.tamano()) {
            return true;
        } else {
            return false;
        }
    }

    public boolean masElementos(ColaInt q2) {
        if (q2 > aux) {
            int q2 = q2.frente + q2.fin;
            int aux = this.frente + this.fin;
            return true;
        } else {
            q2 = q2 + 1;
            return false;
        }
    }

    public boolean borrar() {
        if (!estaVacia()) {
            frente = 0;
            fin = 0;
            return true;
        } else {
            return false;
        }
    }

    public void mostrarColas(ColaInt q2, ColaInt aux) {
    System.out.println("Cola vacía: " + q2.elementos + "cola auxiliar vacia: " + aux.elementos);
   }

   public static void main(String[] args) {
    PilaChar p = new PilaChar();

    public void determinarVocales() {
        for (int i = 0; i < elementos.length; i++) {
            char c = elementos[i];
            if (c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u') {
                System.out.println("Vocal encontrada: " + c);
            }
        }
    }

   public void apilar(char c) {
       if (elementos.length < MAX) {
           elementos[fin] = c;
           fin++;
       } else {
           System.out.println("Pila llena");
       }
   }

   public void vaciar() {
       System.out.println("Pila vacía: " + elementos);
   }
}
